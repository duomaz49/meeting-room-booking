					},
					"response": []
				},
				{
					"name": "Create Booking - Start After End",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"roomId\": 1,\n    \"bookerName\": \"Test User\",\n    \"startTime\": \"2026-01-21T12:00:00\",\n    \"endTime\": \"2026-01-21T10:00:00\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/bookings",
							"host": ["{{baseUrl}}"],
							"path": ["bookings"]
						},
						"description": "Tests 400 Bad Request when start time is after end time.\n\nExpected: 400 Bad Request"
					},
					"response": []
				}
			]
		},
		{
			"name": "Error Cases - 404 Not Found",
			"description": "Test cases for resource not found errors (HTTP 404)",
			"item": [
