{
	"info": {
		"_postman_id": "rising-star-2026-api",
		"name": "Rising Star 2026 - Room Booking API",
		"description": "REST API collection for the Rising Star 2026 room booking application.\n\nArchitecture: Flat RESTful design with query parameters for filtering.\n\nBase URL: http://localhost:8080",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "roomId",
			"value": "1",
			"type": "string"
		},
		{
			"key": "bookingId",
			"value": "1",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Bookings",
			"description": "CRUD operations for booking resources.\n\nEndpoints:\n- POST /bookings - Create booking\n- GET /bookings?roomId={id} - List bookings by room\n- PATCH /bookings/{id} - Cancel booking",
			"item": [
				{
					"name": "Create Booking - Room 1",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"roomId\": 1,\n    \"bookerName\": \"Matti Meikäläinen\",\n    \"startTime\": \"2026-01-21T10:00:00\",\n    \"endTime\": \"2026-01-21T11:00:00\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/bookings",
							"host": ["{{baseUrl}}"],
							"path": ["bookings"]
						},
						"description": "Creates a new booking for Room 1 (Neuvotteluhuone A).\n\nRequest body:\n- roomId: ID of the room to book\n- bookerName: Name of the person making the booking\n- startTime: Start time in ISO 8601 format (must be in future)\n- endTime: End time in ISO 8601 format (must be in future)\n\nResponse: 201 Created with booking details"
					},
					"response": []
				},
				{
					"name": "Create Booking - Room 2",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"roomId\": 2,\n    \"bookerName\": \"Maija Mehiläinen\",\n    \"startTime\": \"2026-01-21T14:00:00\",\n    \"endTime\": \"2026-01-21T15:30:00\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/bookings",
							"host": ["{{baseUrl}}"],
							"path": ["bookings"]
						},
						"description": "Creates a new booking for Room 2 (Neuvotteluhuone B).\n\nResponse: 201 Created with booking details"
					},
					"response": []
				},
				{
					"name": "Get Bookings by Room",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/bookings?roomId={{roomId}}",
							"host": ["{{baseUrl}}"],
							"path": ["bookings"],
							"query": [
								{
									"key": "roomId",
									"value": "{{roomId}}"
								}
							]
						},
						"description": "Retrieves all active (BOOKED status) bookings for a specific room.\n\nQuery parameters:\n- roomId: ID of the room (required)\n\nResponse: 200 OK with array of bookings"
					},
					"response": []
				},
				{
					"name": "Get Bookings - Room 1",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/bookings?roomId=1",
							"host": ["{{baseUrl}}"],
							"path": ["bookings"],
							"query": [
								{
									"key": "roomId",
									"value": "1"
								}
							]
						},
						"description": "Get all active bookings for Room 1 (Neuvotteluhuone A)."
					},
					"response": []
				},
				{
					"name": "Get Bookings - Room 2",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/bookings?roomId=2",
							"host": ["{{baseUrl}}"],
							"path": ["bookings"],
							"query": [
								{
									"key": "roomId",
									"value": "2"
								}
							]
						},
						"description": "Get all active bookings for Room 2 (Neuvotteluhuone B)."
					},
					"response": []
				},
				{
					"name": "Cancel Booking",
					"request": {
						"method": "PATCH",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/bookings/{{bookingId}}",
							"host": ["{{baseUrl}}"],
							"path": ["bookings", "{{bookingId}}"]
						},
						"description": "Cancels an existing booking by its ID.\n\nThe booking status will be changed to CANCELED (soft delete).\n\nResponse: 200 OK with updated booking details"
					},
					"response": []
				}
			]
		},
		{
			"name": "Error Cases - 400 Bad Request",
