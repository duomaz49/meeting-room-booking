							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"roomId\": 999,\n    \"bookerName\": \"Test User\",\n    \"startTime\": \"2026-01-21T10:00:00\",\n    \"endTime\": \"2026-01-21T11:00:00\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/bookings",
							"host": ["{{baseUrl}}"],
							"path": ["bookings"]
						},
						"description": "Tests 404 Not Found when booking a non-existent room.\n\nExpected: 404 Not Found"
					},
					"response": []
				},
				{
					"name": "Cancel Booking - Not Found",
					"request": {
						"method": "PATCH",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/bookings/999",
							"host": ["{{baseUrl}}"],
							"path": ["bookings", "999"]
						},
						"description": "Tests 404 Not Found when canceling a non-existent booking.\n\nExpected: 404 Not Found"
					},
					"response": []
				},
				{
					"name": "Get Bookings - Invalid Room",
					"request": {
						"method": "GET",
